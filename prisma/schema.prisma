generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String

  parts    Part[] // ðŸ‘ˆ opposite relation
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Part {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdBy   Int
  createdAt   DateTime @default(now())
  inStock     Boolean  @default(true)   // âœ… New field added
  user        User     @relation(fields: [createdBy], references: [id])
}
