generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())   // âœ… simpler
  name      String
  email     String   @unique
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
   phoneNumber String?
  addresses   Address[]

  parts   Part[]
  orders  Order[]
}

model Part {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdBy   String   // just String is fine
  createdAt   DateTime @default(now())
  inStock     Boolean  @default(true)
  user        User     @relation(fields: [createdBy], references: [id])
  category    String   @default("Engine")
  carName     String   @default("")
  model       String   @default("")
  year        Int      @default(0)
  orderItems  OrderItem[]
}

model Order {
  id        Int       @id @default(autoincrement())
  userId    String    // just String is fine
  user      User      @relation(fields: [userId], references: [id])
  status    String    @default("Placed")
  createdAt DateTime  @default(now())
  items     OrderItem[]
  address      String?
  phoneNumber  String?
}

model OrderItem {
  id       Int   @id @default(autoincrement())
  orderId  Int
  order    Order @relation(fields: [orderId], references: [id])
  partId   Int
  part     Part  @relation(fields: [partId], references: [id])
  quantity Int   @default(1)
}

model Address {
  id        Int      @id @default(autoincrement())
  userId    String   // References the user
  user      User     @relation(fields: [userId], references: [id])
  address   String
  createdAt DateTime @default(now())
}